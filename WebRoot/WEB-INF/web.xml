<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 定义servlet -->
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>lsl.servlet.LoginServlet</servlet-class>
  </servlet>
  <!-- 定义servlet与URL映射关系 -->
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
    <!-- 定义servlet -->
  <servlet>
  	<servlet-name>register</servlet-name>
  	<servlet-class>lsl.servlet.RegisterServlet</servlet-class>
  </servlet>
  <!-- 定义servlet与URL映射关系 -->
  <servlet-mapping>
  	<servlet-name>register</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
      <!-- 定义servlet -->
  <servlet>
  	<servlet-name>userinfo</servlet-name>
  	<servlet-class>lsl.servlet.UserInfoServlet</servlet-class>
  </servlet>
    <!-- 定义servlet与URL映射关系 -->
  <servlet-mapping>
  	<servlet-name>userinfo</servlet-name>
  	<url-pattern>/userinfo</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <description>获取图片信息</description>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>lsl.servlet.GetImageServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/servlet/images</url-pattern>
  </servlet-mapping>
  
</web-app>
